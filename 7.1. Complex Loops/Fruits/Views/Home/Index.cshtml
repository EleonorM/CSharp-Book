@{
    ViewBag.Title = "Home Page";
}

<h2>Play</h2>
<form action="/Home/FireTop">
    Top: <input type="range" name="position" min="0" max="100" />
    <input type="submit" value="Огън отгоре"/>
</form>
<form action="/Home/FireBottom ">
    <input type="range" name="position" min="0" max="100" />
    <input type="submit" value="Огън отдолу" />
</form>
<form action="/Home/Reset ">
    <input type="submit" value="Нова игра" />
</form>

<h2>Battlefield</h2>
@for (var row = 0; row < ViewBag.rowsCount; row++)
{
    for (int col = 0; col < ViewBag.colsCount; col++)
    {
        <img scr='/images/@(ViewBag.fruits[row, col]).png' />
    }
    <br />
}
<h2>Score: <b>@ViewBag.score</b></h2>